# Project 5001 Configuration
# Copy this file to .env and fill in your values

# YouTube Playlist URL (required)
PLAYLIST_URL=https://www.youtube.com/playlist?list=XXXXXXXX

# File Storage Settings
DEST_DIR=./Project5001/Harvest
AUDIO_FMT=mp3
QUALITY=0

# Harvesting Schedule (in seconds)
CHECK_INTERVAL=3600

# Syncthing Integration (optional)
# Get API key from Syncthing Web UI: Actions -> Settings -> API
SYNCTHING_API_URL=http://localhost:8384
SYNCTHING_API_KEY=your_syncthing_api_key_here
SYNCTHING_FOLDER_ID=your_syncthing_folder_id_here

# Optional: Discord Webhook for notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url

# Optional: Backup settings
BACKUP_ENABLED=false
BACKUP_PATH=/path/to/backup/directory 